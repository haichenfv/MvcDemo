@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="zh">
<head>
    <title></title>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <style type="text/css">
        html, body {
            margin: 0px;
            font-family: Arial, Sans-Serif; /*font-size: 62.5%;*/
            font-size: 12px;
            height: 100%;
            padding: 1px 2px 0px 0px;
            overflow: hidden;
        }
        .sidebar {
            width: 5px;
            height: 500px;
        }
            .sidebar .btn {
                width: 5px;
                height: 39px;
                background: url(/images/sidebar-on.gif);
                margin-top: 200px;
            }
                .sidebar .btn:hover {
                    background-position: 0 -39px;
                }
        .fleft {
            float: left;
        }
    </style>
    <link href="~/libs/CleverTabs/context/themes/base/jquery-ui.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.8.3.min.js"></script>
    <script src="~/libs/CleverTabs/scripts/jquery-ui.js"></script>
    <script src="~/libs/CleverTabs/scripts/jquery.cleverTabs.js"></script>
    <script src="~/libs/CleverTabs/scripts/jquery.contextMenu.js"></script>
    <script type="text/javascript">
        var tabs;
        $(function () {
            //setHeight();
            tabs = $('#tabs').cleverTabs();
            $(window).bind('resize', function () {
                tabs.resizePanelContainer();
            });

            tabs.add({
                url: '/Home/Main',
                label: '月结表',
                //开启Tab后是否锁定(不允许关闭，默认: false)
                lock: false
            });
            $('input[type="button"]').button();

        });
        function addTab(url, name) {
            tabs.add({
                url: url,
                label: name
            });
        }
        $(function () {
            $("#divFolding").click(
                function () { self.parent.hideShowFrame(); }
                );
        });
        //设置页签高度
        function setHeight(h) {
            var h = $(document).height() - 16;
            $("#tabs").height(h);
        }
        //刷新当前页签
        function refreshTag() {
            tabs.getCurrentTab().refresh();
        }
        //关闭当前页签
        function closeCurrentTag() {
            tabs.getCurrentTab().kill();
        }
    </script>

</head>
<body>
    <div class="sidebar fleft">
        <div class="btn" id="divFolding" title="折叠/展开"></div>
    </div>
    <div id="tabs" style="overflow: hidden; padding-top: 0px;height:98.5%">
        <ul>
        </ul>
    </div>
</body>
</html>
