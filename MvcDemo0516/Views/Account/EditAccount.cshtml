@model Core.UserModule.UserAccount
@using ProjectBase.Utils
@{
    ViewBag.Title = "账号修改";
    Html.EnableClientValidation();
}
<style>
    html, body {
        overflow:hidden;
    }
</style>
<script src="~/Scripts/jquery.validate.min.js" type="text/javascript"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js" type="text/javascript"></script>
@Html.Raw(ViewBag.Msg)
<div class="areabx clear">
    <div class="tian_xi" style="width:370px;">
        @using (Html.BeginForm("EditAccount", "Account", FormMethod.Post, new { @clase = "form-inline", @role = "form", name = "from1" }))
        {
            <table width="100%" border="0" cellpadding="0" cellspacing="0">
                <tbody>
                    <tr style="height: 40px;">
                        <td style="width: 120px; text-align: right;">账号名：</td>
                        <td>
                            @Html.TextBoxFor(x => x.Account, new { @class = "trade-timen",@readonly=true})
                            <span class="wtps">*@Html.ValidationMessageFor(m => m.Account)</span>
                        </td>
                    </tr>
                    <tr style="height: 40px;">
                        <td align="right">真实姓名：</td>
                        <td>
                            @Html.TextBoxFor(x => x.RealName, new { @class = "trade-timen" })</td>
                    </tr>
                    <tr style="height: 40px;">
                        <td align="right">是否启用：</td>
                        <td>是 @Html.RadioButtonFor(x => x.IsAvailable, "true", new { Checked = "checked", @name = "status" }) &nbsp;&nbsp;&nbsp;&nbsp;
                            <span class="radioMagin">否 @Html.RadioButtonFor(x => x.IsAvailable, "false", new { @name = "status" })</span></td>
                    </tr>
                </tbody>
            </table>
            <input type="submit" value="确定" class="popbtn1 mg">
            <input type="button" value="关闭" class="popbtn3 mg2" onclick="frameElement.api.opener.updateDG.close();" />
        }
    </div>
</div>